#!/bin/sh
if [ ! -t 1 -o ! $# -eq 1 -o ! -f ~/.backpack -a -z "$BACKPACK" ]; then
	exec ssh "$@"
fi
if [ -z "$BACKPACK" ]; then
	if which base64 >/dev/null 2>&1; then
		encode() {
			base64 | tr -d "\n"
		}
	elif which python3 >/dev/null 2>&1; then
		encode() {
			python3 -m base64 | tr -d "\n"
		}
	elif which python >/dev/null 2>&1; then
		encode() {
			python -m base64 | tr -d "\n"
		}
	else
		echo "Error: Neither base64 nor python available" >&2
		exec ssh "$@"
	fi
	RC="$(encode < ~/.backpack)"
	# Capture the script content now, while $0 still points to this script
	SCRIPT_CONTENT="$(cat "$(realpath "$0")")"
	FUNCTION="$(encode <<EOF
backpack() {
	$SCRIPT_CONTENT
}
export -f backpack 2>/dev/null || true
EOF
)"
	BACKPACK="$(encode <<EOF
extract_backpack() {
	# Always use temporary file approach for maximum compatibility
	TMPRC=\$(mktemp /tmp/backpack.XXXXXX)
	
	# Write startup files
	cat > "\$TMPRC" <<'EOF_2'
[ -f /etc/profile ] && . /etc/profile
for f in ~/.bash_profile ~/.bash_login ~/.profile; do
	if [ -f "\$f" ]; then
		. "\$f"
		break
	fi
done
EOF_2
	decode "$FUNCTION" >> "\$TMPRC"
	decode "$RC" >> "\$TMPRC"
	
	# Also ensure ssh is wrapped for next hop
	echo 'ssh() {' >> "\$TMPRC"
	echo '    if [ -n "\$BACKPACK" ] && which base64 >/dev/null 2>&1 && type backpack >/dev/null 2>&1; then' >> "\$TMPRC"
	echo '        backpack "\$@"' >> "\$TMPRC"
	echo '    else' >> "\$TMPRC"
	echo '        command ssh "\$@"' >> "\$TMPRC"
	echo '    fi' >> "\$TMPRC"
	echo '}' >> "\$TMPRC"
	
	# Check if we're in sh mode even if it's bash running as sh
	if [ "\$0" = "sh" ] || [ "\$0" = "-sh" ] || [ "\$(basename "\$SHELL")" = "sh" ]; then
		ENV="\$TMPRC" /bin/sh -i
	elif [ -n "\$BASH" ] && [ -x "\$BASH" ] && "\$BASH" --version 2>&1 | grep -q "GNU bash"; then
		"\$BASH" --rcfile "\$TMPRC" -i
	elif [ -x /bin/bash ] && /bin/bash --version 2>&1 | grep -q "GNU bash"; then
		/bin/bash --rcfile "\$TMPRC" -i
	elif [ -x /usr/bin/bash ] && /usr/bin/bash --version 2>&1 | grep -q "GNU bash"; then
		/usr/bin/bash --rcfile "\$TMPRC" -i
	else
		# For sh, we need to use ENV variable
		ENV="\$TMPRC" /bin/sh -i
	fi
}
EOF
)"
fi
INIT="$(
cat <<EOF
if which base64 >/dev/null 2>&1; then
	# Define decode function that works in sh
	decode() { printf %s "\$1" | base64 -d; }
	export BACKPACK="$BACKPACK"
	eval "\$(decode "\$BACKPACK")"
	extract_backpack
elif which python3 >/dev/null 2>&1; then
	# Try Python 3 as fallback
	decode() { printf %s "\$1" | python3 -m base64 -d; }
	export BACKPACK="$BACKPACK"
	eval "\$(decode "\$BACKPACK")"
	extract_backpack
elif which python >/dev/null 2>&1; then
	# Try Python 2 as fallback
	decode() { printf %s "\$1" | python -m base64 -d; }
	export BACKPACK="$BACKPACK"
	eval "\$(decode "\$BACKPACK")"
	extract_backpack
else
	# No base64 available, just start a shell
	[ -x "\$SHELL" ] && exec "\$SHELL" -l
	exec /bin/sh -i
fi
EOF
)"
exec ssh -t "$1" "$INIT"
